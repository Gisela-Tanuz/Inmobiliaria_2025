<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_inicio">


    <fragment
        android:id="@+id/nav_inicio"
        android:name="com.example.inmobiliaria_2025.ui.Inicio.InicioFragment"
        android:label="Inicio"
        tools:layout="@layout/fragment_perfil" />

    <fragment
        android:id="@+id/nav_perfil"
        android:name="com.example.inmobiliaria_2025.ui.Perfil.PerfilFragment"
        android:label="Perfil"
        tools:layout="@layout/fragment_perfil" />
    <fragment
        android:id="@+id/nav_inmuebles"
        android:name="com.example.inmobiliaria_2025.ui.Inmuebles.InmueblesFragment"
        android:label="Inmuebles"
        tools:layout="@layout/fragment_inmuebles" >
        <action
            android:id="@+id/action_nav_inmuebles_to_detalleInmueble"
            app:destination="@id/nav_detalleInmueble" />
        <action
            android:id="@+id/action_nav_inmuebles_to_agregarInmueblesFragment"
            app:destination="@id/agregarInmueblesFragment" />

    </fragment>
    <fragment
        android:id="@+id/nav_inquilinos"
        android:name="com.example.inmobiliaria_2025.ui.Inquilinos.InquilinosFragment"
        android:label="Datos del Inquilino"
        tools:layout="@layout/fragment_inquilinos" >
        <action
            android:id="@+id/action_nav_inquilinos_to_nav_detalleContratosFragment"
            app:destination="@id/nav_detalleContratosFragment" />
    </fragment>
    <fragment
        android:id="@+id/nav_cerrar"
        android:name="com.example.inmobiliaria_2025.ui.CerrarSesion.CerrarSesionFragment"
        android:label="Cerrar Sesion"
        tools:layout="@layout/fragment_cerrarsesion" />
    <fragment
        android:id="@+id/nav_detalleInmueble"
        android:name="com.example.inmobiliaria_2025.ui.Inmuebles.DetalleInmueblesFragment"
        android:label="Detalle Inmueble"
        tools:layout="@layout/fragment_detalle_inmuebles">
        <action
            android:id="@+id/action_nav_detalleInmueble_to_inmuebles"
            app:destination="@id/nav_inmuebles" />
    </fragment>
    <fragment
        android:id="@+id/agregarInmueblesFragment"
        android:name="com.example.inmobiliaria_2025.ui.Inmuebles.AgregarInmueblesFragment"
        android:label="Agregar Inmueble "
        tools:layout="@layout/fragment_agregar_inmuebles" >

        <action
            android:id="@+id/action_agregarInmueblesFragment_to_nav_inmuebles"
            app:destination="@id/nav_inmuebles" />
    </fragment>
    <fragment
        android:id="@+id/nav_contratos"
        android:name="com.example.inmobiliaria_2025.ui.Contratos.ContratosFragment"
        android:label="Contratos Vigentes"
        tools:layout="@layout/fragment_contratos" >
        <action
            android:id="@+id/action_nav_contratos_to_detalleContratosFragment"
            app:destination="@id/nav_detalleContratosFragment" />
    </fragment>
    <fragment
        android:id="@+id/nav_detalleContratosFragment"
        android:name="com.example.inmobiliaria_2025.ui.Contratos.DetalleContratosFragment"
        android:label="Detalle Contrato"
        tools:layout="@layout/fragment_detalle_contratos" >
        <action
            android:id="@+id/action_detalleContratosFragment_to_nav_contratos"
            app:destination="@id/nav_contratos" />
        <action
            android:id="@+id/action_nav_detalleContratosFragment_to_nav_inquilinos"
            app:destination="@id/nav_inquilinos" />
        <action
            android:id="@+id/action_nav_detalleContratosFragment_to_pagosFragment"
            app:destination="@id/nav_pagos" />
    </fragment>
    <fragment
        android:id="@+id/nav_pagos"
        android:name="com.example.inmobiliaria_2025.ui.Pagos.PagosFragment"
        android:label="Detalles de Pagos"
        tools:layout="@layout/fragment_pagos" >
        <action
            android:id="@+id/action_pagosFragment_to_nav_detalleContratosFragment"
            app:destination="@id/nav_detalleContratosFragment" />
    </fragment>


</navigation>